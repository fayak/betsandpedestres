{{define "base"}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Bets And Pedestres</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    :root { --pad:16px; --bg:#0b0c10; --fg:#eaf0f6; --muted:#9aa6b2; --card:#13151a; --accent:#72e0a8; }
    *{box-sizing:border-box} body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Helvetica,Arial,sans-serif;background:var(--bg);color:var(--fg)}
    header{display:flex;align-items:center;justify-content:space-between;padding:var(--pad);background:var(--card);position:sticky;top:0;z-index:20}
    .brand{font-weight:700;letter-spacing:.3px}
    main{padding:calc(var(--pad)*1.5)}
    .muted{color:var(--muted)}
    .row{display:flex;gap:8px;align-items:center}
    input,button{font:inherit;padding:8px 10px;border-radius:8px;border:1px solid #2a2e39;background:#0f1117;color:var(--fg)}
    input{min-width:140px}
    button{cursor:pointer;border-color:#334155}
    button.primary{background:var(--accent);color:#0b0c10;border:none}
    .right{display:flex;gap:8px;align-items:center}
    .pill{background:#0f1117;border:1px solid #2a2e39;border-radius:999px;padding:6px 10px}
    a{color:var(--accent);text-decoration:none}
    @media (max-width:640px){
      header{flex-direction:column;align-items:flex-start;gap:10px;position:relative}
      .right{flex-wrap:wrap}
      main{padding:var(--pad)}
      .row{flex-wrap:wrap}
      input{min-width:0;width:100%}
      button{width:100%}
    }
  </style>
  <link rel="icon" type="image/png" href="/assets/favicon.png">
</head>
<body>
  {{template "header" .}}
  <main>
    {{block "content" .}}{{end}}
  </main>
  <script>
  async function doLogin(){
    const f = document.getElementById('loginForm');
    const body = JSON.stringify({username: f.username.value, password: f.password.value});
    const res = await fetch('/api/v1/auth/login', {method:'POST', headers:{'Content-Type':'application/json'}, body});
    if(res.ok){ location.reload(); } else { alert('Login failed'); }
  }
  async function doLogout(){
    const res = await fetch('/api/v1/auth/logout', {method:'POST'});
    if(res.ok){ location.reload(); } else { alert('Logout failed'); }
  }
  </script>
    <script>
  // Set timezone label(s)
  const tz = Intl.DateTimeFormat().resolvedOptions().timeZone || "Europe/Paris";
  document.querySelectorAll('.js-tz').forEach(el => el.textContent = tz);

  // Format all .dt elements to local time without milliseconds, with TZ short name.
  function fmtAllDates(){
    const opts = { year:'numeric', month:'short', day:'2-digit', hour:'2-digit', minute:'2-digit', timeZoneName:'short' };
    document.querySelectorAll('.dt').forEach(el => {
      const iso = el.getAttribute('data-iso');
      if(!iso) return;
      const d = new Date(iso);
      el.textContent = d.toLocaleString(undefined, opts);
    });
  }
  document.addEventListener('DOMContentLoaded', fmtAllDates);
  </script>

</body>
</html>
{{end}}
